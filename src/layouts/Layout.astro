---
import Navbar from "../components/Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;700&family=Orbitron:wght@800;900&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
  </body>
  <!-- <script src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.0/bundled/lenis.js"></script> -->
</html>

<style is:global>
  html {
    @apply font-ibmPlex;
    background-color: #121212;
    color: white;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .wrapper {
    @apply mx-28;
  }

  .btn{
    box-shadow: 4px 4px 0px #296F6D;
    @apply hover:bg-gray-100 active:shadow-none transition-all duration-200 ease-out;

  }

  button:hover {
    @apply duration-150 transition-all;
  }
  .button:active {
    @apply duration-150 transition-all;
  }
  .button:hover .img1 {
    @apply -translate-y-[200%];
  }
  .button:hover .img2 {
    @apply -translate-y-[0%];
  }
  main{
	
  }
</style>

<script>
  // Below script is Lenis from @Studio-Freight for smooth scrolling
  import Lenis from "@studio-freight/lenis";
  const lenis = new Lenis({
    duration: 1.2,
    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
  });
  function raf(time: any) {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }
  requestAnimationFrame(raf);
</script>

