---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<button
  class='bg-white btn uppercase px-6 py-2 text-black button hover:bg-[#ffffff] h-10 hover:border-[1px] ease-in-out transition-all w-fit flex gap-2 items-center'
>
  <span class='text-sm'>{title}</span>
  <div
    class='relative flex overflow-clip items-center justify-center w-6 h-6 rounded-full'
  >
    <img class='absolute img1 duration-500 ease-in-out transition-all w-[50%]' src='/arrowBlack.svg' />
    <img class='absolute img2 duration-500 ease-in-out transition-all translate-y-[200%] w-[45%]' src='/arrowBlackUpwards.svg' />
  </div>
</button>

