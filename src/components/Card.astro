---
export interface Props {
  title: string;
  body: string;
  href: string;
}
const { href, title, body } = Astro.props;
---

<div
  class='max-w-[15rem] relative w-full border-2 border-amber-600 rounded-lg shadow bg-black'
>
  <div class='bg-white rounded-t-lg'>
    <img
      class='rounded-t-lg w-60 h-52 object-cover select-none'
      src={href}
      alt=''
    />
  </div>


  <div
    class='p-4 flex flex-col justify-between gap-4 border-t-2 border-amber-600'
  >
    <p class='text-xl font-bold'>{title}</p>
    <p class='text-gray-400'>{body}</p>
  </div>
</div>
